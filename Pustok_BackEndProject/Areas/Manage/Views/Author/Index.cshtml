@model PageNatedList<Author>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Author Page</h1>
            </div>
            <div class="col-lg-2">
                <a asp-area="manage" asp-controller="author" asp-action="create" class="btn btn-primary">Create</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="indexContainer">
            @await Html.PartialAsync("_AuthorIndexPartial",Model)
        </div>
    </div>
    <div class="col-lg-12">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.HasPrev)
                {
                    <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="author" asp-action="index" asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a></li>
                }
                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")"><a class="page-link" asp-area="manage" asp-controller="author" asp-action="index" asp-route-pageIndex="@i">@i</a></li>

                }
                @if (Model.HasNext)
                {
                    <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="author" asp-action="index" asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a></li>
                }
            </ul>
        </nav>
    </div>
</div>


